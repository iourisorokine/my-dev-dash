<link rel="stylesheet" href="/stylesheets/style.css" />

<div class="homepage-wrapper">
  <div class="homepage-center">
    <form action="/signup/final" method="POST">
      <h2>Almost over! Last step:</h2>
      <div class="py-5">
        <label for="githubUrl">Your Github link (optional):</label>
        {{#unless githubUrl}}
        <input id="githubUrl" type="githubUrl" name="githubUrl" value="{{githubUrl}}">
        {{else}}
        <input id="github" type="github" name="github" placeholder="Your GitHub Account...">
        {{/unless}}
      </div>
      <div class="py-3">
        <p>In which city are you?</p>
        </pIn>
        <button class="style-button" onclick="chooseCity('berlin')">Berlin</button>
        <button class="style-button" onclick="chooseCity('paris')">Paris</button>
        <button class="style-button" onclick="chooseCity('lisbon')">Lisbon</button>

        <div class="py-5" style="display:none;">
          <label for="city">Other, fill-in:</label>
          <input id="city" type="text" name="city" placeholder="Your city..." required="true">
        </div>
        {{!-- <button class="style-button" type="submit">Finish</button> --}}
      </div>
      {{!-- <div class="shame-div">
        <p class="shame">
          We let you skip it, but you've got to promise you will fill it. Deal, <span class="username">{{name}}!</span>
        </p>
      </div> --}}
    </form>
  </div>
</div>

<script>
  const chooseCity = cityStr => {
    document.getElementById('city').value = cityStr;
  }
</script>